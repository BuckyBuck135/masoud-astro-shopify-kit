---
import { Image } from "astro:assets";
import promoImage1 from "@assets/images/promo1.jpg";
import promoImage2 from "@assets/images/promo2.jpg";
---

<section id="collection-1595">
  <div class="cs-container">
    <div class="cs-content">
      <!-- <span class="cs-tag">Only $20</span> -->
      <h2 class="cs-title">Prodotti in evidenza</h2>
      <p class="cs-text">
        Robot tosaerba, Antiparassitari, Impianti di irrigazione, Sementi,
        Ricambi per tosaerba, Lame per tosaerba, Decespugliatori per grandi
        superfici, Fertilizzanti, Utensili per giardinaggio, Macchine da
        giardinaggio, Motoseghe, Motoseghe portatili, Concimi, Tosaerba da
        giardino.
      </p>
      <a href="/products" class="cs-button-solid">Prodotti</a>
    </div>
    <div class="cs-card-group">
      <li class="cs-item auto-show">
        <a href="/products" class="cs-link">
          <picture class="cs-picture">
            <Image
              src={promoImage1}
              aria-hidden="true"
              alt="Promo product 1"
              format="avif"
            />
          </picture>
          <h3 class="cs-product-name">MS 194 T Motosega</h3>
          <div class="cs-price">
            <span aria-hidden="true" class="standard">474€</span>
            <span aria-hidden="true" class="new">329€</span>
            <span class="skip"
              >Questo prodotto è in saldo. Il prezzo standard era di 474€ e il
              suo nuovo prezzo è di 329€</span
            >
          </div>
        </a>
      </li>
      <li class="cs-item auto-show">
        <a href="" class="cs-link">
          <picture class="cs-picture">
            <Image
              src={promoImage2}
              aria-hidden="true"
              alt="Promo product 1"
              format="avif"
            />
          </picture>
          <h3 class="cs-product-name">MS 151 TC-E Motosega</h3>
          <div class="cs-price">
            <span aria-hidden="true" class="standard">534€</span>
            <span aria-hidden="true" class="new">409€</span>
            <span class="skip"
              >Questo prodotto è in saldo. Il prezzo standard era di 534€ e il
              suo nuovo prezzo è di 409€</span
            >
          </div>
        </a>
      </li>
    </div>
  </div>
</section>

<style>
  /*-- -------------------------- -->
<---        Collection          -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #collection-1595 {
      padding: var(--sectionPadding);
    }
    #collection-1595 .cs-container {
      width: 100%;
      max-width: 80rem;
      margin: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      /* 48px - 64px */
      gap: clamp(3rem, 6vw, 4rem);
    }
    #collection-1595 .cs-content {
      /* set text align to left if content needs to be left aligned */
      text-align: left;
      width: 100%;
      max-width: 31.25rem;
      /* pushes it to the left */
      margin-right: auto;
      display: flex;
      flex-direction: column;
      /* centers content horizontally, set to flex-start to left align */
      align-items: flex-start;
    }
    #collection-1595 .cs-tag {
      font-size: 0.8125rem;
      line-height: 1.5rem;
      font-weight: 700;
      letter-spacing: 0.1em;
      margin: 0 0 1rem 0;
      padding: 0 0.5rem;
      color: var(--bodyTextColorWhite);
      background-color: var(--secondary);
      display: block;
    }
    #collection-1595 .cs-text {
      margin-bottom: 1rem;
    }
    #collection-1595 .cs-text:last-of-type {
      margin-bottom: 2rem;
    }
    #collection-1595 .cs-button-solid {
      font-size: 1rem;
      /* 46px - 56px */
      line-height: clamp(2.875rem, 5.5vw, 3.5rem);
      text-decoration: none;
      font-weight: 700;
      text-align: center;
      margin: 0;
      color: #fff;
      min-width: 9.375rem;
      padding: 0 1.5rem;
      background-color: var(--primary);
      display: inline-block;
      position: relative;
      z-index: 1;
      /* prevents padding from adding to the width */
      box-sizing: border-box;
    }
    #collection-1595 .cs-button-solid:before {
      content: "";
      position: absolute;
      height: 100%;
      width: 0%;
      background: #000;
      opacity: 1;
      top: 0;
      left: 0;
      z-index: -1;
      transition: width 0.3s;
    }
    #collection-1595 .cs-button-solid:hover:before {
      width: 100%;
    }
    #collection-1595 .cs-card-group {
      width: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      /* 16px - 20px */
      column-gap: clamp(1rem, 3vw, 1.25rem);
      /* 16px - 40px */
      row-gap: clamp(2rem, 3vw, 4rem);
    }
    #collection-1595 .cs-item {
      list-style: none;
      width: 100%;
      margin: 0;
      padding: 0;
    }
    #collection-1595 .cs-item:hover .cs-picture {
      background-color: rgba(0, 0, 0, 0.1);
    }
    #collection-1595 .cs-item:hover .cs-picture img {
      transform: scale(1.05);
    }
    #collection-1595 .cs-link {
      text-decoration: none;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    #collection-1595 .cs-picture {
      width: 100%;
      height: 100vw;
      min-height: 21.25rem;
      max-height: 25rem;
      /* 12px - 20px */
      margin: 0 0 clamp(0.75rem, 2vw, 1.25rem);
      background-color: #f9f9f9;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 1;
      transition: background-color 0.3s;
    }
    #collection-1595 .cs-picture img {
      width: 100%;
      max-width: 15.625rem;
      height: auto;
      max-height: 80%;
      object-fit: contain;
      transition: transform 0.3s;
    }
    #collection-1595 .cs-product-name {
      /* 20px - 25px */
      font-size: clamp(1.25rem, 2.5vw, 1.5625rem);
      line-height: 1.2em;
      font-weight: 700;
      margin: 0 0 0.25rem 0;
      color: var(--headerColor);
    }
    #collection-1595 .cs-price {
      font-size: 1rem;
      line-height: 1.2em;
      font-weight: 700;
      margin: 0;
      display: flex;
      gap: 1rem;
    }
    #collection-1595 .cs-price .standard {
      text-decoration: line-through;
      color: var(--bodyTextColor);
    }
    #collection-1595 .cs-price .new {
      color: var(--primary);
    }
  }
  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #collection-1595 .cs-container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
    #collection-1595 .cs-card-group {
      width: 56%;
      flex-direction: row;
      align-items: stretch;
      /* prevents flexbox from squishing it */
      flex: none;
    }
    #collection-1595 .cs-item .cs-picture {
      /* 160px - 320px */
      height: clamp(10rem, 26vw, 20rem);
      min-height: 10rem;
    }
    #collection-1595 .cs-item .cs-picture img {
      width: 80%;
    }
    #collection-1595 .cs-link {
      height: 100%;
      justify-content: center;
    }
    #collection-1595 .cs-picture {
      /* 400px - 520px */
      height: clamp(25rem, 50vw, 32.5rem);
      min-height: auto;
      max-height: 100%;
    }
  }
  /* Dark Mode */
  @media only screen and (min-width: 0rem) {
    body.dark-mode #collection-1595 .cs-title,
    body.dark-mode #collection-1595 .cs-product-name,
    body.dark-mode #collection-1595 .cs-text {
      color: var(--bodyTextColorWhite);
    }
    body.dark-mode #collection-1595 .cs-text {
      opacity: 0.8;
    }
    body.dark-mode #collection-1595 .cs-item:hover .cs-picture {
      background-color: rgba(255, 255, 255, 0.2);
    }
    body.dark-mode #collection-1595 .cs-picture {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
