---
const shopifyPublicKey = import.meta.env
  .PUBLIC_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN;
const shopifyStoreDomain = import.meta.env.PUBLIC_SHOPIFY_STORE_DOMAIN;
const shopifyStoreCountry = import.meta.env.PUBLIC_SHOPIFY_STORE_COUNTRY;
const shopifyStoreLang = import.meta.env.PUBLIC_SHOPIFY_STORE_LANGUAGE;
---

<shopify-store
  store-domain=`${shopifyStoreDomain}`
  public-access-token=`${shopifyPublicKey}`
  country=`${shopifyStoreCountry}`
  language=`${shopifyStoreLang}`
>
  <slot />
</shopify-store>
